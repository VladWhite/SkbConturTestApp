<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CalcButtonStyle">
        <item name="android:background">@color/colorLightBlue</item>
        <item name="android:textColor">@color/colorWhiteBlue</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="calcAction">
        <item name="android:background">#f7f8fa</item>
    </style>
    <style name="calcNumber">
        <item name="android:background">#fafbfd</item>
    </style>

</resources>
